{
    "compilerOptions": {
        "lib": ["es6", "dom", "es2017"],
        "outDir": "out",
        "target": "es6",
        "module": "commonjs",
        "noEmitOnError": true,
        "strict": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "exclude": [
        "out",
        "node_modules",
        "**/*.spec.ts"
    ]
}
